datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  id   Int      @default(autoincrement()) @id
  bio  String?
  user User     @relation(fields: [userId], references: [id])
  userId Int    @unique
}

model User {
  id      Int      @default(autoincrement()) @id
  email   String   @unique
  name    String?
  Profile Profile?
}